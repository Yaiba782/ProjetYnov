html(ng-app='pointService')
  head
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title= title
    link(rel='stylesheet', href='/lib/bootstrap/css/bootstrap.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/lib/css/normalize.css')
    link(rel='stylesheet', href='/lib/css/main.css')
    link(rel='stylesheet', href='/lib/css/bootstrap.css')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css')
  body
    .wrapper.clearfix
      a.menu-link(href='#') Menu
        nav.mobile-menu(role='navigation')
          ul
            li
              a(href='index.html') Accueil
            li
              a(href='rechercher.html') Rechercher
            li
              a(href='#') Concept
            li
              a(href='FormulaireDinscription.html') Connexion / Inscription
        header(role='banner')
          .block
            .slider
              #carousel-example-generic.carousel.slide(data-ride='carousel')
                // Indicators
                ol.carousel-indicators
                  li.active(data-target='#carousel-example-generic', data-slide-to='0')
                  li(data-target='#carousel-example-generic', data-slide-to='1')
                  li(data-target='#carousel-example-generic', data-slide-to='2')
                // Wrapper for slides
                .carousel-inner(role='listbox')
                  .item.active
                    img(src='/lib/img/exemple-slider.jpg', alt='')
                    .carousel-caption
                  .item
                    img.image-responsive(src='/lib/img/exemple-slider.jpg', alt='')
                    .carousel-caption
                  .item
                    img.image-responsive(src='/lib/img/exemple-slider.jpg', alt='')
                    .carousel-caption
                // Controls
                a.left.carousel-control(href='#carousel-example-generic', role='button', data-slide='prev')
                  span.glyphicon.glyphicon-chevron-left(aria-hidden='true')
                  span.sr-only Previous
                a.right.carousel-control(href='#carousel-example-generic', role='button', data-slide='next')
                  span.glyphicon.glyphicon-chevron-right(aria-hidden='true')
                  span.sr-only Next
        .top-bar
          nav.nav-left(role='navigation', style='margin-right: 0px;')
            ul
              li
                a(href='index.html') Accueil
              li
                a(href='rechercher.html') Rechercher
          .top-logo(style='-webkit-transform: scale(0); display: none;')
            a(href='#')
              | ServPoint
              span Services describe
          nav.nav-right(role='navigation', style='margin-left: 0px;')
            ul
              li
                a(href='#') Concept
              li
                a(href='FormulaireDinscription.html') Connexion / Inscription
        .content
          div(ng-view)

        footer
          .block
            .organized-by
              | © 2016 Service Point Tous droits réservés.
            .center
              br
              | Suivez
              a(href='##', target='_blank')
                strong @ServicePoint
              |  sur
              strong Twitter
              |  pour en savoir toujours plus sur Service Point.
            div(style='margin:0 auto; width:210px; margin-top:20px;')
            nav.footer-nav
              ul
                li
                  a(href='#') Facebook
                li
                  a(href='##', target='_blank') Twitter
                li
                  a(onclick="window.open('mentionslegales.html', 'MentionsLegales', 'width=535,height=560')") Mentions légales
                li
                  a(href='cgu.html') CGU
                li
                  a(href='#') Nous Contacter
                li
                  a(href='#') F.A.Q.
            .hosted-by
              | Website by
              a(href='#', target='_blank') Ynov Team
    script(src='/lib/javascripts/jquery/dist/jquery.js')
    script(src='/lib/js/main.js')
    script(src='/lib/js/bootstrap.js')
    script(src='/lib/angular/angular.js')
    script(src='/lib/angular-route/angular-route.js')
    script(src='/app.js')
